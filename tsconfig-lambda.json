{
    "compilerOptions": {
      "target": "es2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "incremental": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
